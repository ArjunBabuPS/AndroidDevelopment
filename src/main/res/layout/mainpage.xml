<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dda0dd"
    android:weightSum="1">

    <TextView
        android:layout_width="314dp"
        android:layout_height="wrap_content"
        android:text="Thiagarajar College Of Engineering"
        android:id="@+id/textView6"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.12"
        android:gravity="center"
        android:textSize="25dp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="National Service Scheme"
        android:id="@+id/textView7"
        android:layout_weight="0.21"
        android:gravity="center"
        android:textSize="22dp"
        android:textColor="#000000" />

    <ImageView
        android:layout_width="157dp"
        android:layout_height="159dp"
        android:id="@+id/imageView3"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/logo"/>

    <Button
        android:layout_width="178dp"
        android:layout_height="61dp"
        android:text="StaffSite"
        android:onClick="login"
        android:id="@+id/button4"
        android:layout_gravity="center_horizontal"
        android:textSize="18dp" />

    <Button
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:text="StudentSite"

        android:id="@+id/button5"
        android:layout_gravity="center_horizontal"
        android:textSize="18dp"
        android:onClick="actinfo"/>



    <Button
        android:layout_width="177dp"
        android:layout_height="wrap_content"
        android:text="NSS Awards"
        android:id="@+id/button15"
        android:layout_gravity="center_horizontal"
        android:onClick="nssawards"/>

    <Button
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:text="Exit"
        android:id="@+id/button11"
        android:layout_gravity="center_horizontal" />
</LinearLayout>