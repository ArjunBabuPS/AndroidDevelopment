<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dda0dd"
    android:weightSum="1">

    <TextView
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:text="National Service Scheme"
        android:id="@+id/textView5"
        android:layout_weight="0.00"
        android:textSize="25dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="#000000" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="81dp"
        android:id="@+id/textView9"
        android:layout_gravity="center_horizontal"
        android:text="Welocome To staff Login"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="20dp" />

    <ImageView
        android:layout_width="135dp"
        android:layout_height="120dp"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.00"
        android:src="@drawable/backg" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Update Activity"
        android:id="@+id/button6"
        android:layout_gravity="center_horizontal"
        android:capitalize="characters"
        android:textSize="20dp"
        android:onClick="updateAct" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Update Attendance"
        android:id="@+id/button7"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp"
        android:onClick="updateAtt"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:id="@+id/button2"
        android:layout_gravity="center_horizontal"
        android:textColor="#000000"
        android:textSize="20dp"
        android:onClick="logout"/>
</LinearLayout>